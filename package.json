{
  "name": "dayi-ai-broadcast",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "electron:dev": "vite --config electron.vite.config.ts",
    "electron:build": "vue-tsc -b && vite build --config electron.vite.config.ts && electron-builder",
    "electron:preview": "electron-builder install-app-deps && npm run electron:build && electron ."
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.8.3",
    "element-plus": "^2.9.6",
    "mockjs": "^1.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.5.13",
    "vue-i18n": "^9.14.3",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/mockjs": "^1.0.10",
    "@types/node": "^20.11.30",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^35.0.1",
    "electron-builder": "^24.13.3",
    "sass": "^1.85.1",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.28.2",
    "vue-tsc": "^2.2.4"
  },
  "build": {
    "appId": "com.dayi.ai.broadcast",
    "productName": "大医AI导播系统",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
